.post-container{
    display:flex;
    flex-direction:column;
    margin-top:20rpx;
    margin-bottom:40rpx;
    margin-left:0rpx;
    background-color:#fff;
    border-top:1px solid #ededed;
    border-bottom:1px solid #ededed;
    padding-bottom:5px;
}
.post-author-date{
    margin:10rpx 0 20rpx 10px;
}
.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align:middle;
}
.post-date{
    margin-left:20px;
    vertical-align:middle;
    font-size:26rpx;
    margin-bottom:10px;
}
.post-title{
    font-size:34rpx;
    font-weight:600;
    color:#333;
    margin-bottom:10px;
    margin-left:10px;
}
.post-iamge{
    width:100%;
    height:340rpx;
    margin:auto 0;
    margin-bottom:15px;
}
.post-content{
    font-size:28rpx;
    color:#666;
    margin-bottom:20rpx;
    margin-left:20rpx;
    letter-spacing:2rpx;
    line-height:40rpx;
}
.post-like{
    font-size:13px;
    line-height:16px;
    margin-left:16px;
}
.post-like-iamge{
    width:16px;
    height:16px;
    margin-right:8px;
    vertical-align:middle;
}
.post-like-font{
    vertical-align:middle;
    margin-right: 20px;
}